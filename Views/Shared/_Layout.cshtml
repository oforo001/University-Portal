
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University-Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/University-Portal.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .side-menu {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            right: 0;
            background-color: white;
            background-image: url('https://portal.wsb.pl/image/layout_set_logo?img_id=13113249&t=1748636925875');
            background-repeat: no-repeat;
            background-position: center center;
            background-size: 80% auto;
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 160px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .side-menu nav {
            display: flex;
            flex-direction: column;
        }

        .side-menu a {
            padding: 12px 20px;
            text-decoration: none;
            font-size: 18px;
            color: black;
            display: block;
            transition: 0.2s;
        }

        .side-menu a:hover {
            background-color: #0056a4;
            color: white;
        }

        .close-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 36px;
            color: #0056a4;
            text-decoration: none;
        }

        .open-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #0056a4;
            color: white;
            padding: 10px 15px;
            font-size: 18px;
            border: none;
            cursor: pointer;
            z-index: 1001;
        }

        .open-btn:hover {
            background-color: #004080;
        }

        .login-section {
            padding: 20px;
        }
    </style>
</head>
<body>
    
    <button class="open-btn" onclick="openNav()">☰ Menu</button>

    <div id="side-menu" class="side-menu">
        <a href="javascript:void(0)" class="close-btn" onclick="closeNav()">&times;</a>

        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>
            @if (User.IsInRole("Admin"))
            {
            <a asp-controller="Admin" asp-action="CreateEvent">➕ Create event</a>
            }
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </nav>

        <div class="login-section">
            <partial name="_LoginPartial" />
        </div>
    </div>

    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - University-Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function openNav() {
            document.getElementById("side-menu").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("side-menu").style.width = "0";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>